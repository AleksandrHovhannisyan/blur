{
  "manifest_version": 3,
  "name": "Blur Content",
  "version": "1.0.0",
  "description": "Blur highlighted text and media anywhere on a page.",
  "permissions": [
    "contextMenus", 
    "scripting", 
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "action": {
    "default_popup": "src/popup.html"
  }
}
